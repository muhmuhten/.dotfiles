#!/bin/sh
set -eu

for path; do
	# canonicalize if possible, if not w/e
	which realpath > /dev/null && path=`realpath "$path"`
	[ "${path%${path#?}}" = / ] || path=$PWD/$path

	dest=${path#$HOME/}
	name=`IFS=:/; printf %s, $dest`
	[ "$dest" = "$path" ] || dest=../$dest

	ln -sv "$dest" ~/.bin/"$name"
done
